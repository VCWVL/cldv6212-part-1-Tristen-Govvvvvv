@model IEnumerable<ABCRetailStorageApp.Models.OrderEntity>
@{
    Layout = "_Layout";
}

<div class="table-container">
    <h2>Orders</h2>
    <a asp-action="Create" class="btn-create">Create New Order</a>

    <table class="modern-table">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CustomerName</td>
                    <td>@order.ProductName</td>
                    <td>@order.Quantity</td>
                    <td>@order.UnitPrice</td>
                    <td>@order.TotalPrice</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.RowKey" class="action-link">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@order.RowKey" class="action-link">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="watermark">
        <img src="https://creazilla-store.fra1.digitaloceanspaces.com/icons/3233923/shopping-cart-icon-sm.png" alt="Watermark" />
    </div>
</div>

<style>
    .table-container {
        position: relative;
        max-width: 1000px;
        margin: 4rem auto 3rem auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .table-container h2 {
            text-align: center;
            color: #444740;
            margin-bottom: 1.5rem;
            font-size: 2rem;
        }

    .btn-create {
        display: inline-block;
        background-color: #84735e;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1rem;
        margin-bottom: 1rem;
        transition: background-color 0.3s;
    }

        .btn-create:hover {
            background-color: #636453;
        }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
    }

        .modern-table th, .modern-table td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #ccc;
            text-align: left;
        }

        .modern-table th {
            background-color: #e8e5d1;
            color: #444740;
            font-weight: 600;
        }

        .modern-table tr:hover {
            background-color: #f1f0eb;
        }

    .action-link {
        color: #84735e;
        text-decoration: none;
        font-weight: 500;
    }

        .action-link:hover {
            color: #636453;
        }

    /* Watermark */
    .watermark {
        position: fixed;
        bottom: 20px;
        right: 20px;
        opacity: 0.08;
        pointer-events: none;
    }

        .watermark img {
            max-width: 300px;
            height: auto;
        }
</style>
