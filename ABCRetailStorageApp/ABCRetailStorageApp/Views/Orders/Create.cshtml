@model ABCRetailStorageApp.Models.OrderEntity
@{
    Layout = "_Layout";
}

<div class="form-container">
    <h2>Create Order</h2>

    <form asp-action="Create" method="post" id="createOrderForm">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label>Customer</label>
            <select asp-for="CustomerRowKey" asp-items="@(new SelectList(ViewBag.Customers, "RowKey", "Name"))">
                <option value="">-- Select Customer --</option>
            </select>
            <span asp-validation-for="CustomerRowKey" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Product</label>
            <select asp-for="ProductRowKey" asp-items="@(new SelectList(ViewBag.Products, "RowKey", "Name"))">
                <option value="">-- Select Product --</option>
            </select>
            <span asp-validation-for="ProductRowKey" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" type="number" min="1" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">Create Order</button>
    </form>

    <div class="watermark">
        <img src="https://cdn-icons-png.flaticon.com/512/461/461633.png" alt="Watermark" />
    </div>
</div>

<style>
    .form-container {
        position: relative;
        max-width: 600px;
        margin: 4rem auto 3rem auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .form-container h2 {
            text-align: center;
            font-size: 2rem;
            color: #444740;
            margin-bottom: 2rem;
        }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 1.5rem;
    }

        .form-group label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #444740;
        }

        .form-group input,
        .form-group select {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 8px;
            transition: border 0.3s;
        }

            .form-group input:focus,
            .form-group select:focus {
                border-color: #84735e;
                outline: none;
            }

    .btn-submit {
        display: block;
        width: 100%;
        padding: 0.75rem;
        font-size: 1rem;
        background-color: #84735e;
        color: #fff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #636453;
        }

    .watermark {
        position: fixed;
        bottom: 20px;
        right: 20px;
        opacity: 0.08;
        pointer-events: none;
    }

        .watermark img {
            max-width: 300px;
            height: auto;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
