@model List<string>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Queue Messages";
}

<h2>Queue Messages</h2>

@if (Model == null || !Model.Any())
{
    <p>No messages in the queue.</p>
}
else
{
    <table class="queue-table">
        <thead>
            <tr>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var msg in Model)
            {
                <tr>
                    <td>@msg</td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h3>Send a new message</h3>
<form asp-action="Send" method="post" class="queue-form">
    <input type="text" name="message" placeholder="Enter message" required />
    <button type="submit">Send</button>
</form>

<!-- Optional watermark -->
<div class="watermark"></div>

<style>
    .queue-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
        background-color: #f8f9fa;
    }

        .queue-table th, .queue-table td {
            border: 1px solid #ccc;
            padding: 0.75rem;
            text-align: left;
        }

        .queue-table th {
            background-color: #e8e5d1;
            color: #444740;
        }

    .queue-form {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }

        .queue-form input[type="text"] {
            flex: 1;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .queue-form button {
            padding: 0.5rem 1rem;
            background-color: #84735e;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .queue-form button:hover {
                background-color: #636453;
            }

    /* Watermark */
    .watermark {
        position: fixed;
        bottom: 1rem;
        right: 1rem;
        width: 200px;
        height: 200px;
        background-image: url('https://via.placeholder.com/200');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        opacity: 0.1;
        pointer-events: none;
        z-index: 0;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .queue-table, .queue-table th, .queue-table td

    {
        display: block;
        width: 100%;
    }

    .queue-form {
        flex-direction: column;
    }

    }
</style>
