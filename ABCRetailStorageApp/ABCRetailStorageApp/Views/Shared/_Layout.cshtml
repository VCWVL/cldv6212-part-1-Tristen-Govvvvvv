<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ABC Retail App</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        /* General Reset */
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #444740;
        }

        /* Layout wrapper to push footer down */
        .layout-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: 60px; /* space for fixed header */
        }

        main.container {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        /* Header */
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #e8e5d1;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            z-index: 1000;
        }

            header .logo {
                font-size: 1.5rem;
                font-weight: bold;
                color: #444740;
                font-family: 'Georgia', 'Palatino Linotype', 'Palatino', 'Times New Roman', serif;
            }

            header nav ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
                gap: 1.5rem;
                margin-right: 2rem;
            }

                header nav ul li a {
                    text-decoration: none;
                    color: #444740;
                    font-weight: 500;
                    transition: color 0.3s ease;
                }

                    header nav ul li a:hover {
                        color: #84735e;
                    }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 1rem 1rem;
            width: 100%;
        }

            .hero h1 {
                font-family: 'Georgia', 'Palatino Linotype', 'Palatino', 'Times New Roman', serif;
                font-size: 4rem;
                color: #444740;
                margin-bottom: 1rem;
                font-weight: 700;
                text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
            }

            .hero h2 {
                font-size: 1.75rem;
                color: #636453;
                margin-bottom: 2rem;
                font-weight: 400;
            }

            .hero img {
                max-width: 250px;
                height: auto;
                margin-top: 2rem;
                display: block;
                margin-left: auto;
                margin-right: auto;
                border-radius: 20px;
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            }

        /* Footer */
        footer {
            text-align: center;
            padding: 1rem;
            background-color: #e8e5d1;
            margin-top: auto;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            header

        {
            flex-direction: column;
            align-items: flex-start;
        }

        header nav ul {
            flex-direction: column;
            gap: 0.5rem;
        }

        

        .hero h1 {
            font-size: 3rem;
        }

        .hero h2 {
            font-size: 1.25rem;
        }

        .hero img {
            max-width: 180px;
        }

        }

       
    </style>
</head>
<body>
    <div class="layout-wrapper">
        <header>
            <div class="logo">ABC Retail</div>
            <nav>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Tables" asp-action="Customers">Customers</a></li>
                    <li><a asp-controller="Tables" asp-action="Products">Products</a></li>
                    <li><a asp-controller="Orders" asp-action="Index">Orders</a></li>
                    <li><a asp-controller="Files" asp-action="Index">Contracts</a></li>
                    <li><a asp-controller="Queues" asp-action="Index">Queues</a></li>
                </ul>
            </nav>
        </header>

        <main role="main" class="container">
            <!-- Hero Section: only on Home page -->
            @if (ViewData["Title"]?.ToString() == "Home")
            {
                <div class="hero">
                    <h1 class="header-fix">Welcome to ABC Retail!</h1>
                    <h2>Making retail management as easy as 1...2...3!</h2>
                    <img src="@Url.Content("~/Images/ABC_RETAIL.jpg")" alt="ABC Retail Logo" class="hero-logo" />
                </div>
            }

            @RenderBody()
        </main>

        <footer>
            <p>&copy; 2025 ABC Retail App - ST10446952</p>
        </footer>
    </div>

    <!-- jQuery / Bootstrap / Custom Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
