@model ABCRetailStorageApp.Models.CustomerEntity
@{
    Layout = "_Layout";
}

<div class="form-container">
    <h2>@(Model.RowKey == null ? "Create Customer" : "Edit Customer")</h2>

    <form asp-action="@(Model.RowKey == null ? "CreateCustomer" : "EditCustomer")" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-input" />
            <span asp-validation-for="Name" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" class="validation-message"></span>
        </div>

        <button type="submit" class="btn-submit">
            @(Model.RowKey == null ? "Create" : "Save Changes")
        </button>
    </form>

    <div class="watermark">
        <img src="https://cdn1.iconfinder.com/data/icons/avatar-1-2/512/Add_User1-512.png" alt="Watermark" />
    </div>
</div>

<style>
    .form-container {
        position: relative;
        max-width: 500px;
        margin: 5rem auto 3rem auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .form-container h2 {
            text-align: center;
            color: #444740;
            margin-bottom: 2rem;
            font-size: 2rem;
        }

    .form-group {
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

    .form-input {
        padding: 0.6rem 1rem;
        border-radius: 8px;
        border: 1px solid #847c6d;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s;
    }

        .form-input:focus {
            border-color: #84735e;
        }

    .validation-message {
        color: #d9534f;
        font-size: 0.85rem;
        margin-top: 0.3rem;
    }

    .btn-submit {
        display: block;
        width: 100%;
        padding: 0.75rem;
        background-color: #84735e;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #636453;
        }

    /* Watermark */
    .watermark {
        position: absolute;
        bottom: 10px;
        right: 10px;
        opacity: 0.1;
        pointer-events: none;
    }

        .watermark img {
            max-width: 200px;
            height: auto;
        }
</style>
