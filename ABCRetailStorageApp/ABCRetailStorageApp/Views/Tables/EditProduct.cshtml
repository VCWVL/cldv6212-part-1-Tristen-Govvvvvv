@model ABCRetailStorageApp.Models.ProductEntity
@{
    Layout = "_Layout";
}

<div class="form-container">
    <h2>Edit Product</h2>

    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="RowKey" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current Image:</label>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div>
                    <img src="@Model.ImageUrl" width="150" style="border-radius:8px; margin-bottom:0.5rem;" />
                </div>
            }
        </div>

        <div class="form-group">
            <label>Upload New Image (optional):</label>
            <input type="file" name="image" />
        </div>

        <button type="submit" class="btn-submit">Save Changes</button>
        <a asp-action="Products" class="btn-cancel">Cancel</a>
    </form>

    <div class="watermark">
        <img src="https://creazilla-store.fra1.digitaloceanspaces.com/icons/3233803/edit-icon-md.png" alt="Watermark" />
    </div>
</div>

<style>
    .form-container {
        position: relative;
        max-width: 600px;
        margin: 5rem auto 3rem auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .form-container h2 {
            text-align: center;
            color: #444740;
            margin-bottom: 2rem;
            font-size: 2rem;
        }

    .form-group {
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .form-group input[type="text"],
        .form-group input[type="number"],
        .form-group input[type="file"] {
            padding: 0.5rem;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

    .btn-submit {
        background-color: #84735e;
        color: #fff;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        width: 100%;
        font-size: 1rem;
        margin-bottom: 1rem;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #636453;
        }

    .btn-cancel {
        display: inline-block;
        background-color: #636453;
        color: #fff;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1rem;
        transition: background-color 0.3s;
        text-align: center;
    }

        .btn-cancel:hover {
            background-color: #444740;
        }

    /* Watermark */
    .watermark {
        position: fixed;
        bottom: 20px;
        right: 20px;
        opacity: 0.08;
        pointer-events: none;
    }

        .watermark img {
            max-width: 300px;
            height: auto;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
