@model List<ABCRetailStorageApp.Models.ProductEntity>
@{
    Layout = "_Layout";
}

<div class="table-container">
    <h2>Products</h2>
    <a href="@Url.Action("CreateProduct")" class="btn-create">Create New Product</a>

    <table class="styled-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                    <td>
                        @if (!string.IsNullOrEmpty(p.ImageUrl))
                        {
                            <img src="@p.ImageUrl" width="80" />
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("EditProduct", new { id = p.RowKey })" class="btn-edit">Edit</a>
                        <a href="@Url.Action("DeleteProduct", new { id = p.RowKey })" class="btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="watermark">
        <img src="https://tse3.mm.bing.net/th/id/OIP.M468ropaLUYaSsnfCfch9gHaHa?rs=1&pid=ImgDetMain&o=7&rm=3" alt="Watermark" />
    </div>
</div>

<style>
    .table-container {
        position: relative;
        max-width: 900px;
        margin: 5rem auto 3rem auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .table-container h2 {
            color: #444740;
            margin-bottom: 1rem;
            font-size: 2rem;
            text-align: center;
        }

    .btn-create {
        display: inline-block;
        margin-bottom: 1rem;
        padding: 0.5rem 1rem;
        background-color: #84735e;
        color: #fff;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-create:hover {
            background-color: #636453;
        }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
    }

        .styled-table thead tr {
            background-color: #847c6d;
            color: #fff;
            text-align: left;
        }

        .styled-table th, .styled-table td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #ddd;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #e8e5d1;
        }

        .styled-table img {
            border-radius: 4px;
            object-fit: cover;
        }

    .btn-edit, .btn-delete {
        margin-right: 0.5rem;
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        text-decoration: none;
        color: #fff;
        font-size: 0.9rem;
        transition: background-color 0.3s;
    }

    .btn-edit {
        background-color: #636453;
    }

        .btn-edit:hover {
            background-color: #444740;
        }

    .btn-delete {
        background-color: #d9534f;
    }

        .btn-delete:hover {
            background-color: #b53b3b;
        }

    /* Watermark */
    .watermark {
        position: fixed;
        bottom: 20px;
        right: 20px;
        opacity: 0.08;
        pointer-events: none;
    }

        .watermark img {
            max-width: 300px;
            height: auto;
        }
</style>
